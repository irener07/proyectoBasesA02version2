<div class="row">
    <div class="card ">
        <div class="card-header  align-items-center d-flex justify-content-center">
            <h1>Search Flights</h1> 
        </div>
        <div class="card-body ">
            <form action="/clients/flightsReport" method='POST'> 
                <div class="form-group">
                    Select Status:
                    <select id ="status" name="status">
                        <option selected name=default>Select Status</option>
                        <option value="Ontime" name="Ontime">Ontime</option>
                        <option value="Delayed" name="Delayed">Delayed</option>
                        <option value="Canceled" name="Canceled">Canceled</option>     
                    </select>
                </div>
                
                <div class="form-group">
                    <label>Range of Date</label>
                    <input type="date" name="date01">
                    <input type="date" name="date02">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">
                        Search
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="row">
    <div class="card-header justify-content: center">
        <h1>Flights</h1> 
    </div>
<table class="egt table {
    border-collapse: separate;
    border-spacing: 5px;
    background: #000 url("gradient.gif") bottom left repeat-x;
    color: #fff;
 }">
   
  <tr>
    <th>Airline</th>
    <th>Name</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Itinerary</th>
    <th>Date</th>
    <th>Restrictions</th>
    <th>Services</th>
    <th>Status</th>
    <th>Price</th>
    <th></th>
  </tr>
  
    {{#each flightsRequests}}

  <tr>
    <th>{{idAirline}}</th>
    <td>{{name}}</td>
    <td>{{origin}}</td>
    <td>{{destination}}</td>
    <td>{{itinerary}}</td>
    <td>{{dateTime}}</td>
    <td>{{restrictions}}</td>
    <td>{{services}}</td>
    <td>{{status}}</td>
    <td>${{price}}</td>
  </tr>
  {{/each}}
    </table>
    
</div>
