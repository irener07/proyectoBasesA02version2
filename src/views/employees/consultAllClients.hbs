<div class="row">
    <div class="card-header">
        <h1>All Clients</h1> 
    </div>
<table class="egt table {
    border-collapse: separate;
    border-spacing: 5px;
    background: #000 url("gradient.gif") bottom left repeat-x;
    color: #fff;
 }">

    <tr>
    <th scope="row">ID</th>
    <th>Firts Name</th>
    <th>Last Name</th>
    <th>Birth Date</th>
    <th>Nacionality</th>
    <th>Country</th>
    <th>State</th>
    <th>Address</th>
    <th>Email</th>
    <th>Telephones</th>
    </tr>

        {{#each allClients}}

    <tr>
        <td>{{id}}</td>
        <td>{{firstName}}</td>
        <td>{{lastName}}</td>
        <td>{{birthDate}}</td>
        <td>{{nationality}}</td>
        <td>{{country}}</td>
        <td>{{state}}</td>
        <td>{{address}}</td>
        <td>{{email}}</td>
        <td>{{telephone}}</td>
    </tr>
 {{/each}}
</table>
</div>