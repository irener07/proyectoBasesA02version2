<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="car-hearder">
               Clients Register 
            </div>
            <div class="card-body">
                <form action="/clients/signUpClients" method='POST'>
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" class="form-control" name="firstName" placeholder="First Name" value={{firstName}}>
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" class="form-control" name="lastName" placeholder="Last Name" value={{lastName}}>
                    </div>
                    <div class="form-group">
                        <label>Birth Date</label>
                        <input type="date" class="form-control" name="birthDate" value={{birthDate}}>
                    </div>
                    <div class="form-group">
                        <label>Nacionality</label>
                        <select name="nacionality" id="nacionality" value={{nacionality}}></select>
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <select name="country" id="country" value={{country}}></select>
                    </div>
                    <div class="form-group">
                        <label>State</label>
                        <select name="state" id="state" value={{state}}></select>
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" name="address" placeholder="Address" value={{address}}>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Email" value={{email}}>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Password" value={{password}}>
                    </div>
                    <div class="form-group">
                        <label>Telephone</label>
                        <input type="text" class="form-control" name="telephone" placeholder="Telephone" value={{telephone}}>
                    </div>
                    <button type="submit">
                        Sign Up Client
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
