{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">6times</span>
        </button>
    </div>
{{/each}}



<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>New Airport</h3>
    </div>
    <div class="card-body">
            <form action="/airports/new-airport" method="POST">
            <div class="form-group">
                Name:
                    <input type="text" name="airportName"></br>
                Select Country (with states):   
                    <select id="countryC" name ="countryC"></select></br>
                Select State: <select name ="stateC" id ="stateC"></select>  </br>
                Address:
                    <input type="text" name="airportAddress"></br>
                Email:
                    <input type="text" name="airportEmail"></br>
                Telephone:
                    <input type="text" name="airportTelephone"></br>
                Web Page:
                    <input type="text" name="airportWebP"></br>
            </div>
            <div class="form-group">
                <button class="bton btn-primary btn-block" type="submit">
                    Save
                </button>
            </div>
            </form>
    </div>
</div>
</div>