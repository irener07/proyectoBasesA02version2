
<div class="row">
    <form action="/employees/moduleEmployees/registeredFlights" method='POST'> 
        <div class="form-group">
            <label>Dates</label><br>
            <label>Begin</label>
            <input type="date" name="dateTimeBegin">
            <label>End</label>
            <input type="date" name="dateTimeEnd">
        </div>
        <div class="form-group">
            <label>Status</label><br>
            <select name ="status" id ="status">
                <option value="any">Any</option>
                <option value="Ontime">On Time</option>
                <option value="Delayed">Delayed</option>
                <option value="Canceled">Canceled</option>     
            </select>
        </div>
        <div class="form-group">
            <label>Full Name:</label><br>
            <label>First Name:</label>
            <input type="text" name="firstName">
            <label>Last Name:</label>
            <input type="text" name="lastName">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">
                Search
            </button>
        </div>
    </form>
<table class="egt table {
    border-collapse: separate;
    border-spacing: 5px;
    background: #000 url("gradient.gif") bottom left repeat-x;
    color: #fff;
 }">
   
  <tr>
    <th scope="row">ID</th>
    <th>Airline ID</th>
    <th>Name</th>
    <th>Origin</th>
    <th>Destination</th>
    <th>Itinerary</th>
    <th>DateTime</th>
    <th>Restrictions</th>
    <th>Services</th>
    <th>Status</th>
    <th>Maximium Capacity</th>
    <th>Sold Tickets</th>
    <th>Current Seat Number</th>
    <th>Price</th>
  </tr>
  
    {{#each flightsFound}}

  <tr>
    <th>{{id}}</th>
    <td>{{idAirline}}</td>
    <td>{{name}}</td>
    <td>{{origin}}</td>
    <td>{{destination}}</td>
    <td>{{itinerary}}</td>
    <td>{{dateTime}}</td>
    <td>{{restrictions}}</td>
    <td>{{services}}</td>
    <td>{{status}}</td>
    <td>{{maximiumCapacity}}</td>
    <td>{{ticketsSold}}</td>
    <td>{{seatNumber}}</td>
    <td>{{price}}</td>
  </tr>
    {{/each}}
    </table>
</div> 