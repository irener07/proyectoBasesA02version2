<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>New Employee</h3>
    </div>

    <div class="card-body">
            <form action="/employees/signUpEmployees" method="POST">
            <div class="form-group">
                ID:
                    <input type="text" name="id"></br>
                Name:
                    <input type="text" name="firstName"></br>
                Last Names:
                    <input type="text" name="lastName"></br>
           
                Select Type: <select name ="type" id ="type">
                    <option value="Manager">Manager</option>
                    <option value="Technical">Technical</option>
                    <option value="Operator">Operator</option>     
                </select> </br> 
                
                Select WorkDepartment: <select name ="jobArea" id ="jobArea">
                    <option value="Counter">Counter</option>
                    <option value="BoardingRooms">BoardingRooms</option>
                    <option value="Load">Load</option>
                    <option value="Maintenance">Maintenance</option>     
                 </select>   </br>        

                Email:
                    <input type="email" name="email"></br> 

                Password:
                    <input type="password" name="password"></br>    

            
                
            </div>
            <div class="form-group">
                <button class="bton btn-primary btn-block" type="submit">
                    Save
                </button>
            </div>
            </form>
        </div>
    </div>
</div>