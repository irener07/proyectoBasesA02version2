<div class="row">
<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>Confirm Purchase Flight {{dataUserConnected.idFlight}}</h3>
    </div>
    <div class="card-body">
            <form action="/clients/confirmPurchase/{{dataUserConnected.idFlight}}&idUser=" method="POST">
                <div class="form-group">
                    <label>Tickets Number</label>
                    <input type="number" name="ticketsNumber" min="1" step="1" placeholder="Tickets Number">
                </div>
                <div class="form-group">
                    <label>Suitcases</label>
                    <input type="number" name="suitcases" min="0" step="1" placeholder="Suitcases">
                </div>
                <div class="form-group">
                    <label>Observations</label>
                    <textarea name="observation"></textarea>
                </div>
                <div class="form-group">
                    <button class="bton btn-primary btn-block" type="submit">
                        Confirm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>