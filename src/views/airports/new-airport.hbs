<div class="col-md-12 mx-60px">
    <div class="card">
    <div class="card-header align-items-center d-flex justify-content-center">
        <h3>New Airport</h3>
    </div>
    <div class="card-body align-items-center d-flex justify-content-center">
            <form action="/airports/new-airport" method="POST">
            <div class="form-group">
                Name:
                    <input type="text" name="airportName"></br>
                Select Country (with states):   
                    <select id="country" name ="country"></select></br>
                Select State: 
                    <select name ="state" id ="state"></select>  </br>
                Address:
                    <input type="text" name="airportAddress"></br>
                Email:
                    <input type="email" name="airportEmail"></br>
                Telephone:
                    <input type="text" name="airportTelephone"></br>
                Web Page:
                    <input type="text" name="airportWebP"></br>
            </div>
            <div class="form-group">
                <button class="bton btn-primary btn-block" type="submit">
                    Save
                </button>
            </div>
            </form>
    </div>
</div>
</div>