{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">6times</span>
        </button>
    </div>
{{/each}}



<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>New Airline</h3>
    </div>

    <div class="card-body">
            <form action="/airlines/createAirline" method="POST">
            <div class="form-group">
                ID:
                    <input type="text" name="airlineId"></br>
                Name:
                    <input type="text" name="airlineName"></br>

                Select Country: 
                    <select name ="country" id ="countryC"></select>  </br>

                
            </div>
            <div class="form-group">
                <button class="bton btn-primary btn-block" type="submit">
                    Save
                </button>
            </div>
            </form>
        </div>
    </div>
</div>