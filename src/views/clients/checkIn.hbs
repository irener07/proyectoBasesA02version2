                <div class="form-group">
                    Id:  
                        <input type="text" name="id" value="{{client.id}}" id="clientId"></br>
                    <br>
                    Flight Id:    
                        <input type="text" name="flightId" value="{{flight.id}}" id="flightId"></br>
                </div>
                <div class="form-group">
                    <button class="bton btn-primary btn-block" type="submit">
                        Check In
                    </button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
